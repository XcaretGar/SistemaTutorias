<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sistematutoriasfx.controlador.tutor.FXMLPrincipalTutorController">
   <children>
      <Pane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: white;">
         <children>
            <Pane prefHeight="70.0" prefWidth="600.0" style="-fx-background-color: #063596;">
               <children>
                  <Label layoutX="30.0" layoutY="25.0" text="Sistema de Gestión de Tutorías" textFill="WHITE">
                     <font><Font size="16.0" /></font>
                     <effect><Blend /></effect>
                  </Label>
                  <Label fx:id="lbNombreTutor" layoutX="350.0" layoutY="25.0" prefWidth="220.0" text="Tutor: ..." textFill="WHITE" alignment="CENTER_RIGHT">
                     <font><Font size="16.0" /></font>
                     <effect><Blend /></effect>
                  </Label>
               </children>
            </Pane>

            <Label layoutX="90.0" layoutY="90.0" text="Módulo de Tutorías">
               <font><Font size="16.0" /></font>
               <effect><Blend /></effect>
            </Label>
            
            <Label layoutX="360.0" layoutY="90.0" text="Módulo de Problemáticas">
               <font><Font size="16.0" /></font>
               <effect><Blend /></effect>
            </Label>

            <Button layoutX="60.0" layoutY="140.0" mnemonicParsing="false" onAction="#clicHorarioTutoria" prefHeight="60.0" prefWidth="200.0" style="-fx-background-color: #417C9E;" text="Horarios de Tutoría" textFill="WHITE">
               <font><Font size="16.0" /></font>
               <effect><Blend /></effect>
               <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
            <Label layoutX="60.0" layoutY="205.0" prefWidth="200.0" text="Configura fecha y hora" textFill="#7f8c8d" wrapText="true">
               <font><Font size="11.0" /></font>
            </Label>

            <Button layoutX="60.0" layoutY="240.0" mnemonicParsing="false" onAction="#clicEvidenciaTutoria" prefHeight="60.0" prefWidth="200.0" style="-fx-background-color: #417C9E;" text="Evidencia de Tutoría" textFill="WHITE">
               <font><Font size="16.0" /></font>
               <effect><Blend /></effect>
               <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
            <Label layoutX="60.0" layoutY="305.0" prefWidth="200.0" text="Sube archivos y fotos" textFill="#7f8c8d" wrapText="true">
               <font><Font size="11.0" /></font>
            </Label>

            <Button layoutX="340.0" layoutY="140.0" mnemonicParsing="false" onAction="#clicReporteTutoria" prefHeight="60.0" prefWidth="200.0" style="-fx-background-color: #417C9E;" text="Reporte de Tutoría" textFill="WHITE">
               <font><Font size="16.0" /></font>
               <effect><Blend /></effect>
               <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
            <Label layoutX="340.0" layoutY="205.0" prefWidth="200.0" text="Genera, edita y exporta" textFill="#7f8c8d" wrapText="true">
               <font><Font size="11.0" /></font>
            </Label>

            <Button layoutX="340.0" layoutY="240.0" mnemonicParsing="false" onAction="#clicAsistenciaTutoria" prefHeight="60.0" prefWidth="200.0" style="-fx-background-color: #417C9E;" text="Asistencia" textFill="WHITE">
               <font><Font size="16.0" /></font>
               <effect><Blend /></effect>
               <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>
            <Label layoutX="340.0" layoutY="305.0" prefWidth="200.0" text="Registra alumnos asistentes" textFill="#7f8c8d" wrapText="true">
               <font><Font size="11.0" /></font>
            </Label>

            <Button layoutX="200.0" layoutY="420.0" mnemonicParsing="false" onAction="#clicCerrarSesion" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #d9534f;" text="Cerrar Sesión" textFill="WHITE">
               <font><Font size="14.0" /></font>
               <effect><Blend /></effect>
               <cursor><Cursor fx:constant="HAND" /></cursor>
            </Button>

         </children>
      </Pane>
   </children>
</AnchorPane>