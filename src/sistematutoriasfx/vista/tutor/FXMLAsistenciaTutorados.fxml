<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sistematutoriasfx.controlador.tutor.FXMLAsistenciaTutoradosController">
   <children>
      <Pane prefHeight="70.0" prefWidth="600.0" style="-fx-background-color: #063596;">
         <children>
            <Label layoutX="31.0" layoutY="23.0" text="Sistema de Gestión de Tutorías" textFill="WHITE">
               <effect>
                  <Blend />
               </effect>
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
         </children>
      </Pane>

      <Label layoutX="31.0" layoutY="135.0" text="Período:">
         <font><Font name="System Bold" size="12.0" /></font>
      </Label>
      <ComboBox fx:id="cbPeriodo" layoutX="31.0" layoutY="158.0" prefHeight="30.0" prefWidth="169.0" promptText="Seleccionar..." />

      <Label layoutX="228.0" layoutY="135.0" text="Fecha de Sesión:">
         <font><Font name="System Bold" size="12.0" /></font>
      </Label>
      <ComboBox fx:id="cbFechaSesion" layoutX="228.0" layoutY="158.0" prefHeight="30.0" prefWidth="207.0" promptText="Seleccionar..." />
      
      <Label layoutX="30.0" layoutY="96.0" text="Gestionar Asistencia">
         <effect><Blend /></effect>
         <font><Font size="18.0" /></font>
      </Label>
      
      <Label layoutX="30.0" layoutY="211.0" text="Resumen de Asistencia de Sesiones">
         <effect><Blend /></effect>
         <font><Font size="13.0" /></font>
      </Label>

      <TableView fx:id="tvListaAsistencia" layoutX="12.0" layoutY="240.0" prefHeight="169.0" prefWidth="576.0">
        <columns>
          <TableColumn fx:id="colFechaSesion" prefWidth="114.0" text="Fecha de sesión" />
          
          <TableColumn fx:id="colSesion" prefWidth="81.0" text="Sesión" />
          
          <TableColumn fx:id="colTotalAlumnos" prefWidth="121.0" text="Total de Alumnos" />
          <TableColumn fx:id="colTotalAsistentes" prefWidth="90.0" text="Asistieron" />
            <TableColumn fx:id="colEnRiesgo" prefWidth="76.0" text="En riesgo" />
          
          <TableColumn fx:id="colEstado" prefWidth="93.0" text="Estado" />
        </columns>
      </TableView>

      <Button layoutX="30.0" layoutY="440.0" mnemonicParsing="false" onAction="#clicRegresar" prefHeight="29.0" prefWidth="86.0" style="-fx-background-color: #7f8c8d;" text="Regresar" textFill="WHITE">
         <font><Font size="13.0" /></font>
      </Button>

      <Button layoutX="242.0" layoutY="440.0" mnemonicParsing="false" onAction="#clicEliminar" prefHeight="29.0" prefWidth="73.0" style="-fx-background-color: #d9534f;" text="Eliminar" textFill="WHITE">
         <font><Font size="13.0" /></font>
      </Button>
      
      <Button layoutX="398.0" layoutY="440.0" mnemonicParsing="false" onAction="#clicModificar" prefHeight="29.0" prefWidth="73.0" style="-fx-background-color: #E3B629;" text="Modificar" textFill="WHITE">
         <font><Font size="13.0" /></font>
      </Button>

      <Button layoutX="476.0" layoutY="440.0" mnemonicParsing="false" onAction="#clicPasarLista" prefHeight="29.0" prefWidth="93.0" style="-fx-background-color: #38AB3B;" text="Pasar lista" textFill="WHITE">
         <font><Font size="13.0" /></font>
      </Button>
      <Button layoutX="320.0" layoutY="440.0" mnemonicParsing="false" onAction="#clicConsultar" prefHeight="29.0" prefWidth="73.0" style="-fx-background-color: #2D6BB5;" text="Consultar" textFill="WHITE">
         <font>
            <Font size="13.0" />
         </font>
      </Button>

   </children>
</AnchorPane>
