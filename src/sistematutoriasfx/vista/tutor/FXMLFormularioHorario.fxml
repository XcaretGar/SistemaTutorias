<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="550.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sistematutoriasfx.controlador.tutor.FXMLFormularioHorarioController">
   <children>
      <Pane prefHeight="550.0" prefWidth="600.0" style="-fx-background-color: white;">
         <children>
            <Pane prefHeight="70.0" prefWidth="600.0" style="-fx-background-color: #063596;">
               <children>
                  <Label layoutX="30.0" layoutY="25.0" text="Sistema de Gestión de Tutorías" textFill="WHITE">
                     <font><Font size="16.0" /></font>
                     <effect><Blend /></effect>
                  </Label>
               </children>
            </Pane>

            <Label layoutX="30.0" layoutY="90.0" text="Registrar Horario de Tutoría">
               <font><Font size="18.0" /></font>
               <effect><Blend /></effect>
            </Label>

            <Label layoutX="50.0" layoutY="140.0" text="Período Escolar:" />
            <ComboBox fx:id="cbPeriodo" layoutX="50.0" layoutY="160.0" prefHeight="30.0" prefWidth="220.0" promptText="Seleccionar..." />

            <Label layoutX="300.0" layoutY="140.0" text="Fecha de Sesión:" />
            <ComboBox fx:id="cbFechaBase" layoutX="300.0" layoutY="160.0" prefHeight="30.0" prefWidth="250.0" promptText="Seleccionar..." />
            <Label fx:id="lbFechaMostrada" layoutX="300.0" layoutY="195.0" text="" textFill="#063596">
               <font><Font name="System Bold" size="12.0" /></font>
            </Label>

            <Label layoutX="50.0" layoutY="230.0" text="Hora de Inicio:" />
            <HBox alignment="CENTER_LEFT" layoutX="50.0" layoutY="250.0" spacing="5.0">
               <children>
                  <ComboBox fx:id="cbHora" prefHeight="30.0" prefWidth="70.0" promptText="10" />
                  <Label text=":"><font><Font size="14.0" /></font></Label>
                  <ComboBox fx:id="cbMinutos" prefHeight="30.0" prefWidth="70.0" promptText="00" />
                  <ComboBox fx:id="cbAmPm" prefHeight="30.0" prefWidth="70.0" promptText="AM" />
               </children>
            </HBox>

            <Label layoutX="300.0" layoutY="230.0" text="Lugar / Aula:" />
            <TextField fx:id="tfLugar" layoutX="300.0" layoutY="250.0" prefHeight="30.0" prefWidth="250.0" promptText="Ej. Aula F103" />

            <Label layoutX="50.0" layoutY="310.0" text="Comentarios:" />
            <TextArea fx:id="taComentarios" layoutX="50.0" layoutY="330.0" prefHeight="80.0" prefWidth="500.0" promptText="Indicaciones para los alumnos..." wrapText="true" />

            <Button layoutX="400.0" layoutY="450.0" mnemonicParsing="false" onAction="#clicGuardar" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #38AB3B;" text="Guardar" textFill="WHITE">
               <font><Font size="16.0" /></font>
               <effect><Blend /></effect>
            </Button>
            
            <Button layoutX="230.0" layoutY="450.0" mnemonicParsing="false" onAction="#clicCancelar" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #d9534f;" text="Cancelar" textFill="WHITE">
               <font><Font size="16.0" /></font>
               <effect><Blend /></effect>
            </Button>

         </children>
      </Pane>
   </children>
</AnchorPane>
