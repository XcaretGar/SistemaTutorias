<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="300.0" prefWidth="500.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sistematutoriasfx.controlador.tutor.FXMLFormularioEvidenciaController">
   <children>
      <Pane prefHeight="60.0" prefWidth="500.0" style="-fx-background-color: #063596;">
         <children>
            <Label layoutX="20.0" layoutY="18.0" text="Detalles de la Evidencia" textFill="WHITE">
               <font><Font name="System Bold" size="18.0" /></font>
            </Label>
         </children>
      </Pane>

      <Label layoutX="30.0" layoutY="90.0" text="Nombre del Archivo (En el sistema):" />
      <TextField fx:id="tfNombreEvidencia" layoutX="30.0" layoutY="115.0" prefHeight="30.0" prefWidth="440.0" promptText="Ej. Lista de Asistencia Firmada" />

      <Label layoutX="30.0" layoutY="160.0" text="Archivo Adjunto:" />
      <TextField fx:id="tfNombreArchivoOriginal" editable="false" layoutX="30.0" layoutY="185.0" prefHeight="30.0" prefWidth="300.0" promptText="No se ha seleccionado archivo" style="-fx-background-color: #f0f0f0;" />
      
      <Button layoutX="340.0" layoutY="185.0" mnemonicParsing="false" onAction="#clicSeleccionarArchivo" prefHeight="30.0" prefWidth="130.0" style="-fx-background-color: #417C9E;" text="Seleccionar..." textFill="WHITE">
      </Button>
      
      <Label fx:id="lbError" layoutX="30.0" layoutY="225.0" textFill="RED" />

      <Button layoutX="300.0" layoutY="250.0" mnemonicParsing="false" onAction="#clicGuardar" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: #38AB3B;" text="Guardar" textFill="WHITE">
         <font><Font name="System Bold" size="12.0" /></font>
      </Button>
      
      <Button layoutX="390.0" layoutY="250.0" mnemonicParsing="false" onAction="#clicCancelar" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: #d9534f;" text="Cancelar" textFill="WHITE">
         <font><Font name="System Bold" size="12.0" /></font>
      </Button>
   </children>
</AnchorPane>